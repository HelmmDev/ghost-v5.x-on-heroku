{{! Header navigation }}
<div class="nav-menu-container">
{{^if isSecondary}}
<ul>
	<li id="search-mobile" class="search-icon">
		{{>search enabled_search=true}}
	</li>
	{{#foreach navigation to="5"}}
	<li><a href="https://www.helmm.com/lifeathelmm{{url}}"{{#if current}} class="is-active"{{/if}}>{{label}}</a></li>
	{{/foreach}}
	{{#foreach navigation from="6"}}
	{{#if @first}}
	<li class="is-dropdown">
		{{>icons/site/dots}}
		<ul>
			{{/if}}
			<li><a href="https://www.helmm.com/lifeathelmm{{url}}"{{#if current}} class="is-active"{{/if}}>{{label}}</a></li>
			{{#if @last}}
		</ul>
	</li>
	{{/if}}
	{{/foreach}}
	<li id="search-desktop" class="search-icon">
		{{>search enabled_search=true}}
	</li>
</ul>
{{else}}
</div>


